generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeaderboardEntry {
  id        String   @id @default(cuid())
  handle    String   @unique
  score     Int
  aiScore   Int
  quizScore Int
  verdict   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([score])
  @@map("leaderboard_entries")
}
